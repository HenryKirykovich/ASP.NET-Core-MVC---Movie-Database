@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Title</dt>
        <dd class = "col-sm-10">@Model.Title</dd>

        <dt class = "col-sm-2">Release Date</dt>
        <dd class = "col-sm-10">@Model.ReleaseDate.ToString("d")</dd>

        <dt class = "col-sm-2">Genre</dt>
        <dd class = "col-sm-10">@Model.Genre</dd>

        <dt class = "col-sm-2">Price</dt>
        <dd class = "col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class = "col-sm-2">Rating</dt>
        <dd class = "col-sm-10">@Model.Rating</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
